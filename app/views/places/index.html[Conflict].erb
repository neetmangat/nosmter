<!-- PLACES LIST -->
    <% @places.each do |place| %>
        <div class="booyah-box col-10 offset-1 info">
            <div class="row">
            <div class="col-12 col-sm-4">
            <h1><%= link_to place.name, place_path(place) %></h1>
            <!-- i><%= place.address %></i <br /><br />-->
            </div>
            
            <div class="col-12 col-sm-6 offset-sm-2 float-right">
            <% if place.photos.present? %>
                <%= image_tag place.photos.first.picture.url, class: 'img-fluid indeximage' %>
            <% end %>
            </div>
            </div>

            <br />
            <p><%= place.description %></p>


        
            <% if place.comments.present? %>
                <div class="col-12">
                    <blockquote>
                        <% if place.comments.last.humanized_rating.present? %>
                            <b><%= place.comments.last.humanized_rating %></b>:
                        <% end %>
                            <%= place.comments.last.message %>
                            <small>- <%= place.comments.last.user.email %></small>
                    </blockquote>
                </div>
            <% end %>

            <% if place.user.present? %>
                <small><i>Added by: <%= link_to place.user.email, user_path(place.user) %></i></small>
            <% end %>

        </div>

    <% end %>
<!-- PLACES LIST -->

<br />

